# Example environment variables for python-restapi
# Copy this file to .env and fill values for your environment

# Which configuration to use: development or production
FLASK_CONFIG=development

# Secret keys
SECRET_KEY=change-me-in-production
JWT_SECRET_KEY=change-this-jwt-secret-in-production

# Database URL, e.g. for Postgres: postgresql://user:pass@localhost/dbname
# If omitted the app will use a local SQLite file (data.db)
DATABASE_URL=

# CORS allowed origins (comma-separated or *)
CORS_ORIGINS=*

# Port to run the Flask app
PORT=5000

# Enable debug (True/False)
FLASK_DEBUG=True

